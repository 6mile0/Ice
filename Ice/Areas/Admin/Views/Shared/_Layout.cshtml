<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Ice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Ice.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Ice Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">ダッシュボード</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="StudentGroup" asp-action="Index">学生グループ管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Assignment" asp-action="Index">課題管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="AdminUser" asp-action="Index">講師管理</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <select id="adminUserSelect" class="form-select form-select-sm bg-dark text-white border-secondary" style="min-width: 150px; background-image: url('data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 16 16%22%3E%3Cpath fill=%22none%22 stroke=%22%23ffffff%22 stroke-linecap=%22round%22 stroke-linejoin=%22round%22 stroke-width=%222%22 d=%22m2 5 6 6 6-6%22/%3E%3C/svg%3E');">
                            <option value="">講師を選択...</option>
                        </select>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Ice - <a asp-area="Admin" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function() {
        // 講師リストを取得してドロップダウンに追加
        $.ajax({
            url: '/admin/users/api/list',
            method: 'GET',
            success: function(data) {
                const select = $('#adminUserSelect');
                data.forEach(function(user) {
                    select.append($('<option>', {
                        value: user.id,
                        text: user.fullName
                    }));
                });

                // LocalStorageから選択された講師を読み込み
                const selectedUserId = localStorage.getItem('selectedAdminUserId');
                if (selectedUserId) {
                    select.val(selectedUserId);
                }
            }
        });

        // 講師選択時にLocalStorageに保存
        $('#adminUserSelect').on('change', function() {
            const selectedUserId = $(this).val();
            if (selectedUserId) {
                localStorage.setItem('selectedAdminUserId', selectedUserId);
            } else {
                localStorage.removeItem('selectedAdminUserId');
            }
        });
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>