@model Ice.Areas.Admin.ViewModels.Assignment.AddAssignmentViewModel
@{
    ViewData["Title"] = "課題を追加 | ice";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <h1 class="mb-4">課題を追加</h1>
    <flash dismissable="true" />

    <form method="post" asp-action="AddAssignment">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">課題名</label>
            <input asp-for="Name" type="text" class="form-control" required maxlength="200" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">完了要件(チェックポイント)</label>
            <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">追加</button>
            <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}