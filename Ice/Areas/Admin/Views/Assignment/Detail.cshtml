@model Ice.Areas.Admin.ViewModels.Assignment.AssignmentDetailViewModel
@{
    ViewData["Title"] = "課題詳細 | ice";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>課題詳細</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">編集</a>
            <a asp-action="Index" class="btn btn-secondary">一覧に戻る</a>
        </div>
    </div>
    <flash dismissable="true" />

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">基本情報</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>課題名</strong>
                </div>
                <div class="col-md-9">
                    @Model.Name
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>並び順</strong>
                </div>
                <div class="col-md-9">
                    @Model.SortOrder
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>作成日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>更新日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">完了要件(チェックポイント)</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <pre class="mb-0" style="white-space: pre-wrap;">@Model.Description</pre>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    完了要件はありません
                </div>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">割り当て済み学生グループ</h5>
        </div>
        <div class="card-body">
            @if (Model.AssignedStudentGroups.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>グループ名</th>
                                <th style="width: 150px;">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.AssignedStudentGroups)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="StudentGroup" asp-action="Detail" asp-route-id="@group.Id">@group.GroupName</a>
                                    </td>
                                    <td>
                                        <form asp-action="UnassignStudentGroup" asp-route-assignmentId="@Model.Id" asp-route-studentGroupId="@group.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('この学生グループから課題の割り当てを解除しますか？');">解除</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    まだ学生グループに割り当てられていません
                </div>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">学生グループに割り当て</h5>
        </div>
        <div class="card-body">
            @if (Model.UnassignedStudentGroups.Any())
            {
                <form asp-action="AssignStudentGroups" asp-route-assignmentId="@Model.Id" method="post">
                    <div class="mb-3">
                        <label class="form-label">割り当てる学生グループを選択</label>
                        @foreach (var group in Model.UnassignedStudentGroups)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="studentGroupIds" value="@group.Id" id="group-@group.Id">
                                <label class="form-check-label" for="group-@group.Id">
                                    @group.GroupName
                                </label>
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">割り当て</button>
                </form>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    すべての学生グループに割り当て済みです
                </div>
            }
        </div>
    </div>
</div>