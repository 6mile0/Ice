@model Ice.Areas.Admin.ViewModels.Assignment.AssignmentDetailViewModel
@{
    ViewData["Title"] = "課題詳細 | ice";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>課題詳細</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">編集</a>
            <a asp-action="Index" class="btn btn-secondary">一覧に戻る</a>
        </div>
    </div>
    <flash dismissable="true" />

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">基本情報</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>課題名</strong>
                </div>
                <div class="col-md-9">
                    @Model.Name
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>並び順</strong>
                </div>
                <div class="col-md-9">
                    @Model.SortOrder
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>作成日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>更新日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">完了要件(チェックポイント)</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <pre class="mb-0" style="white-space: pre-wrap;">@Model.Description</pre>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    完了要件はありません
                </div>
            }
        </div>
    </div>
</div>