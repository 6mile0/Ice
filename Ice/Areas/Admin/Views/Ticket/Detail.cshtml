@model Ice.Areas.Admin.ViewModels.Ticket.TicketDetailViewModel
@{
    ViewData["Title"] = "チケット詳細 | ice";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>チケット詳細</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">編集</a>
            <a asp-controller="StudentGroup" asp-action="Detail" asp-route-id="@Model.StudentGroupId" class="btn btn-secondary">学生グループに戻る</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">基本情報</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>タイトル</strong>
                </div>
                <div class="col-md-9">
                    @Model.Title
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>ステータス</strong>
                </div>
                <div class="col-md-9">
                    @switch (Model.Status)
                    {
                        case "対応中":
                            <span class="badge bg-warning text-dark">@Model.Status</span>
                            break;
                        case "解決済み":
                            <span class="badge bg-success">@Model.Status</span>
                            break;
                        case "トラブルなどで保留中":
                            <span class="badge bg-danger">@Model.Status</span>
                            break;
                        default:
                            <span class="badge bg-info">@Model.Status</span>
                            break;
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>学生グループ</strong>
                </div>
                <div class="col-md-9">
                    <a asp-controller="StudentGroup" asp-action="Detail" asp-route-id="@Model.StudentGroupId">@Model.StudentGroupName</a>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>担当者</strong>
                </div>
                <div class="col-md-9">
                    @if (Model.AssignedTo != null)
                    {
                        @Model.AssignedTo.FullName
                    }
                    else
                    {
                        <em>未割当</em>
                    }
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>作成日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>更新日時</strong>
                </div>
                <div class="col-md-9">
                    @Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">メモ欄</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(Model.Remark))
            {
                <pre class="mb-0" style="white-space: pre-wrap;">@Model.Remark</pre>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    メモはありません。
                </div>
            }
        </div>
    </div>
</div>