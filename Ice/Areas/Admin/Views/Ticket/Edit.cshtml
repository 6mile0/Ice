@model Ice.Areas.Admin.Dtos.Req.EditTicketDto
@{
    ViewData["Title"] = "チケット編集 | ice";
    var ticketId = ViewData["TicketId"];
}

<div class="container mt-4">
    <h1 class="mb-4">チケット編集</h1>

    <form method="post" asp-action="Edit" asp-route-id="@ticketId">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">タイトル</label>
            <input asp-for="Title" type="text" class="form-control" required maxlength="200" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label">ステータス</label>
            <select asp-for="Status" class="form-select" required>
                <option value="">選択してください</option>
                <option value="@((int)Ice.Enums.TicketStatus.InProgress)">対応中</option>
                <option value="@((int)Ice.Enums.TicketStatus.Resolved)">解決済み</option>
                <option value="@((int)Ice.Enums.TicketStatus.Pending)">トラブルなどで保留中</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Remark" class="form-label">メモ欄</label>
            <textarea asp-for="Remark" class="form-control" rows="8" maxlength="2000"></textarea>
            <span asp-validation-for="Remark" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">更新</button>
            <a asp-action="Detail" asp-route-id="@ticketId" class="btn btn-secondary">キャンセル</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}