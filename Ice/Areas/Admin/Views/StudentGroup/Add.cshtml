@model Ice.Areas.Admin.Dtos.Req.AddStudentGroupDto
@{
    ViewData["Title"] = "学生グループ追加 | ice";
}

<div class="container mt-4">
    <h1 class="mb-4">学生グループ追加</h1>

    <form method="post" asp-action="AddStudentGroup">
        <div class="mb-3">
            <label asp-for="GroupName" class="form-label">グループ名</label>
            <input asp-for="GroupName" type="text" class="form-control" placeholder="1班" required maxlength="200" />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">追加</button>
            <a asp-action="Index" class="btn btn-secondary">キャンセル</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
