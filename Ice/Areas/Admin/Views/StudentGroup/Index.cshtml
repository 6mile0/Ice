@model Ice.Areas.Admin.ViewModels.StudentGroup.StudentGroupListViewModel
@{
    ViewData["Title"] = "学生グループ一覧 | ice";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>学生グループ一覧</h1>
        <div>
            <a asp-action="AddStudentGroup" class="btn btn-primary">追加する</a>
        </div>
    </div>
    <flash dismissable="true" />
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>グループ名</th>
                <th>作成日</th>
                <th>更新日</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var studentGroup in Model.StudentGroupList)
            {
                <tr>
                    <td>
                        <a asp-action="Detail" asp-route-id="@studentGroup.Id" class="text-decoration-none">
                            @studentGroup.GroupName
                        </a>
                    </td>
                    <td>@studentGroup.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                    <td>@studentGroup.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (!Model.StudentGroupList.Any())
    {
        <div class="alert alert-info" role="alert">
            学生グループが存在しません。追加ボタンをクリックして学生グループを作成してください。
        </div>
    }
</div>
