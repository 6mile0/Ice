@model Ice.Areas.Student.ViewModels.AddTicketViewModel
@{
    ViewData["Title"] = "TA/SAを呼ぶ | ice";
}
@addTagHelper *, Vereyon.Web.FlashMessage

<div class="container mt-4">
    <h1 class="mb-4">TA/SAを呼ぶ</h1>
    <flash dismissable="true" />

    <form method="post" asp-action="AddTicket">
        <input type="hidden" asp-for="StudentGroupId" value="@Model.StudentGroupId" />

        <div class="mb-3">
            <label asp-for="AssignmentId" class="form-label">関連する課題 <span class="text-danger">*</span></label>
            <select asp-for="AssignmentId" asp-items="Model.Assignments" class="form-select" required>
                <option value="">選択してください</option>
            </select>
            <span asp-validation-for="AssignmentId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">困ってること <span class="text-danger">*</span></label>
            <textarea asp-for="Title" type="text" class="form-control" placeholder="〇〇というエラーが表示されて進めることができません"></textarea>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg">呼び出す</button>
        </div>
    </form>
</div>

<div id="loadingOverlay" style="display: @(Model.IsAbleAddTicket ? "flex" : "none"); position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7); z-index: 9999; justify-content: center; align-items: center;">
    <div style="text-align: center; color: white;">
        <div class="spinner-border" role="status" style="width: 3rem; height: 3rem; margin-bottom: 1rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <h2 class="mb-3">対応中です...しばらくお待ちください</h2>
        <h4 class="mb-3">担当者: @Model.StaffName</h4>
        <p>担当の人が10分以上待っても来ない場合は、近くのTA/SAに声をかけてください</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
